<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.a16alfonsofa.aurora01.Pantallas.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="Montserrat"
                android:paddingLeft="10dp"
                android:text="Hola Alfonso!"
                android:textColor="#252525"
                android:textSize="23sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/marginTop"
                android:fontFamily="Montserrat"
                android:paddingLeft="10dp"
                android:text="Como te sientes hoy?"
                android:textColor="#252525"
                android:textSize="15sp"
                android:textStyle="bold" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/btn_sos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:src="@mipmap/ic_sos_uncolor"
            android:tint="#5ba8e8" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/marginTop"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/button1"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:background="@drawable/boton_redondo"
            android:clickable="true"
            android:padding="3dp"
            android:textColor="@color/colorAccent" />

        <ImageView
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:background="@drawable/boton_redondo"
            android:clickable="true"
            android:padding="3dp"
            android:textColor="@color/colorAccent" />

        <ImageView
            android:id="@+id/button3"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="2dp"
            android:layout_weight="1"
            android:background="@drawable/boton_redondo"
            android:clickable="true"
            android:padding="3dp"
            android:textColor="@color/colorAccent" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/marginTop"
            android:layout_weight="1"
            android:fontFamily="Montserrat"
            android:paddingLeft="10dp"
            android:text="tu siguiente consulta"
            android:textColor="#252525"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/marginTop"
            android:fontFamily="Montserrat"
            android:gravity="left"
            android:paddingLeft="10dp"
            android:text="VER TODO"
            android:textColor="#1376e9"
            android:textSize="10sp"
            android:textStyle="bold" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/button9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/marginTop"
        android:background="@drawable/boton_redondo_etiqueta_fondo"
        android:orientation="vertical"
        android:padding="2dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@+id/textView3"
            android:layout_marginTop="-6dp"
            android:background="@color/Gris"
            android:gravity="center|left"
            android:paddingLeft="50dp"
            android:paddingRight="30dp"
            android:paddingStart="30dp"
            android:paddingTop="25dp"
            android:text="Doctor Javier Fernandez Gonzalez
Hospital Cunqueiro - Vigo"
            android:textColor="#000"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:background="@drawable/boton_redondo_etiqueta"
            android:backgroundTint="@color/colorbtnredondofondo"
            android:paddingBottom="30dp"
            android:paddingLeft="30dp"
            android:paddingTop="20dp"
            android:text="Miercoles,
Noviembre 15
11:45pm"
            android:textColor="#000"
            android:textSize="35sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="-40dp"
            android:layout_marginTop="159dp"
            android:background="@drawable/boton_redondo2"
            android:drawableLeft="@mipmap/ic_check"
            android:gravity="center"
            android:paddingLeft="50dp"
            android:paddingRight="30dp"
            android:text="Recordatorio Psicologo"
            android:textColor="#fff"
            android:textSize="16sp"
            android:textStyle="bold" />


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/marginTop"
            android:layout_weight="1"
            android:fontFamily="Montserrat"
            android:paddingLeft="10dp"
            android:text="tu siguiente consulta"
            android:textColor="#252525"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/marginTop"
            android:fontFamily="Montserrat"
            android:gravity="left"
            android:paddingLeft="10dp"
            android:text="VER TODO"
            android:textColor="#1376e9"
            android:textSize="10sp"
            android:textStyle="bold" />
    </LinearLayout>


    <RelativeLayout
        android:id="@+id/button4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/marginTop"
        android:background="@drawable/boton_redondo_etiqueta_fondo_alerta"
        android:minHeight="200dp">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginLeft="7dp"
            android:background="@color/Gris"
            android:gravity="center|left"
            android:paddingLeft="70dp"
            android:text="¿Que planes tienes para este fin de semana?"
            android:textColor="#000"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:gravity="center|left"
            android:paddingLeft="70dp"
            android:paddingTop="10dp"
            android:text="Tarea diária"
            android:textColor="@color/colorvacio"
            android:textSize="10sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:gravity="center|left"
            android:paddingLeft="129dp"
            android:paddingTop="10dp"
            android:text="20 Septiembre 2017"
            android:textColor="#000"
            android:textSize="10sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingTop="7dp"
            android:src="@mipmap/ic_test_uncolor" />

    </RelativeLayout>

</LinearLayout>

