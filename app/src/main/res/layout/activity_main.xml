<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.a16alfonsofa.aurora01.Pantallas.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="Montserrat"
                android:paddingLeft="10dp"
                android:text="Hi Alfonso!"
                android:textColor="#252525"
                android:textSize="23sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/marginTop"
                android:fontFamily="Montserrat"
                android:paddingLeft="10dp"
                android:text="How do you feel today?"
                android:textColor="#252525"
                android:textSize="15sp"
                android:textStyle="bold" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/btn_sos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:src="@mipmap/ic_sos_uncolor"
            android:tint="#5ba8e8" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/marginTop"
        android:orientation="horizontal">

        <ToggleButton
            android:id="@+id/button1"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:background="@drawable/boton_redondo"
            android:checked="false"
            android:onClick="feeling"
            android:textColor="@color/colorAccent"
            android:textOff=""
            android:textOn="" />

        <ToggleButton
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:background="@drawable/boton_redondo"
            android:checked="false"
            android:onClick="feeling"
            android:textColor="@color/colorAccent"
            android:textOff=""
            android:textOn="" />

        <ToggleButton
            android:id="@+id/button3"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="2dp"
            android:layout_weight="1"
            android:background="@drawable/boton_redondo"
            android:checked="true"
            android:onClick="feeling"
            android:textColor="@color/colorAccent"
            android:textOff=""
            android:textOn="" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/marginTop"
            android:layout_weight="1"
            android:fontFamily="Montserrat"
            android:paddingLeft="10dp"
            android:text="your next session"
            android:textColor="#252525"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/marginTop"
            android:fontFamily="Montserrat"
            android:gravity="left"
            android:paddingLeft="10dp"
            android:text="SEE ALL"
            android:textColor="#1376e9"
            android:textSize="10sp"
            android:textStyle="bold" />
    </LinearLayout>

    <Button
        android:id="@+id/button9"
        android:layout_width="match_parent"
        android:layout_height="255dp"
        android:layout_marginTop="@dimen/marginTop"
        android:background="@drawable/boton_redondo"
        android:layout="@layout/activity_splash"
        android:enabled="true"
        android:textStyle="bold"
        android:textSize="50sp"
        android:text="CITA"
        android:backgroundTint="@color/colorvacio"
        android:textColor="@color/colorbtnredondofondo" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/marginTop"
            android:layout_weight="1"
            android:fontFamily="Montserrat"
            android:paddingLeft="10dp"
            android:text="your next session"
            android:textColor="#252525"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/marginTop"
            android:fontFamily="Montserrat"
            android:gravity="left"
            android:paddingLeft="10dp"
            android:text="SEE ALL"
            android:textColor="#1376e9"
            android:textSize="10sp"
            android:textStyle="bold" />
    </LinearLayout>

    <Button
        android:id="@+id/button4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/marginTop"
        android:background="@drawable/boton_redondo"
        android:text="CITA"
        android:textColor="@color/colorAccent" />


</LinearLayout>
