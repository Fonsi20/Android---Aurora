<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.a16alfonsofa.aurora01.Pantallas.MainActivity">

    <RelativeLayout
        android:id="@+id/seccionSup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="Montserrat"
                android:paddingLeft="10dp"
                android:text="Hola Alfonso!"
                android:textColor="#252525"
                android:textSize="23sp" />

            <TextView
                android:id="@+id/howIam"
                android:layout_width="171dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/Name"
                android:layout_marginTop="8dp"
                android:fontFamily="Montserrat"
                android:paddingLeft="10dp"
                android:text="Como te sientes hoy?"
                android:textColor="#252525"
                android:textSize="15sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <ImageButton
            android:id="@+id/btn_sos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="12dp"
            android:layout_marginRight="12dp"
            android:background="#fff"
            android:src="@mipmap/ic_sos_uncolor"
            android:tint="#5ba8e8" />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/feelings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/seccionSup"
        android:layout_marginTop="@dimen/marginTop"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/button1"
            android:layout_width="90dp"
            android:layout_height="60dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/boton_redondo"
            android:clickable="true"
            android:padding="3dp"
            android:textColor="@color/colorAccent" />

        <ImageView
            android:id="@+id/button2"
            android:layout_width="90dp"
            android:layout_height="60dp"
            android:layout_marginEnd="7dp"
            android:layout_marginRight="7dp"
            android:layout_toStartOf="@+id/button1"
            android:layout_toLeftOf="@+id/button1"

            android:background="@drawable/boton_redondo"
            android:clickable="true"
            android:padding="3dp"
            android:textColor="@color/colorAccent" />

        <ImageView
            android:id="@+id/button3"
            android:layout_width="90dp"
            android:layout_height="60dp"
            android:layout_marginEnd="7dp"
            android:layout_marginRight="7dp"
            android:layout_toStartOf="@+id/button2"
            android:layout_toLeftOf="@+id/button2"
            android:background="@drawable/boton_redondo"
            android:clickable="true"
            android:padding="3dp"
            android:textColor="@color/colorAccent" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/seccionCenter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/feelings">


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/textmore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/seccionCenter"
        android:layout_marginTop="3dp"
        android:gravity="bottom"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textmore1"
            android:layout_width="166dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/marginTop"
            android:layout_weight="1"
            android:fontFamily="Montserrat"
            android:paddingLeft="10dp"
            android:text="tu siguiente consulta"
            android:textColor="#252525"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textmore2"
            android:layout_width="68dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="157dp"
            android:layout_marginTop="@dimen/marginTop"
            android:layout_toRightOf="@id/textmore1"
            android:fontFamily="Montserrat"
            android:foregroundGravity="right"
            android:gravity="bottom"
            android:paddingLeft="10dp"
            android:text="VER TODO"
            android:textColor="#1376e9"
            android:textSize="10sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_below="@id/textmore"
        android:id="@+id/seccionIup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom">

        <RelativeLayout
            android:id="@+id/button4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/marginTop"
            android:background="@drawable/boton_redondo_etiqueta_fondo_alerta">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginLeft="7dp"
                android:background="@color/Gris"
                android:gravity="center|left"
                android:paddingLeft="70dp"
                android:text="¿Que planes tienes para este fin de semana?"
                android:textColor="#000"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:gravity="center|left"
                android:paddingLeft="70dp"
                android:paddingTop="10dp"
                android:text="Tarea diária"
                android:textColor="@color/colorvacio"
                android:textSize="10sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:gravity="center|left"
                android:paddingLeft="129dp"
                android:paddingTop="10dp"
                android:text="20 Septiembre 2017"
                android:textColor="#000"
                android:textSize="10sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:paddingTop="7dp"
                android:src="@mipmap/ic_test_uncolor" />

        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>

